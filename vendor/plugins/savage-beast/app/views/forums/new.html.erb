<div class="crumbs">
	<%= link_to "Forums"[:forums_title], forums_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= t(:new_forum) %></h1>

<% form_for :forum, :url => forums_path do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag t(:create) -%> <%= t(:or) %> <%= link_to(t(:cancel), forums_path) -%>
<% end -%>
